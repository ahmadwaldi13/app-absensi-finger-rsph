select * from (
select 
	USERID,
	Badgenumber,
	Name,
	mverifypass as password,
	1 as group_,
	0 as privilege,
	0 as card,
	Badgenumber as pin2,
	0 as tz1,
	0 as tz3
from sik_atam_absensi_mdb.userinfo
order by CONVERT ( REPLACE (Badgenumber, '-', '' ), UNSIGNED INTEGER )
)utama 
;